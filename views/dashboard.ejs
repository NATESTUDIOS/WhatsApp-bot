<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>WhatsApp Bot Dashboard</title>
  <style>
    body {
      font-family: 'Segoe UI', sans-serif;
      background: #f2f2f2;
      margin: 0;
      padding: 2rem;
      color: #333;
      animation: fadeIn 0.6s ease;
    }

    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }

    .container {
      max-width: 700px;
      margin: auto;
      background: #fff;
      padding: 2rem;
      border-radius: 12px;
      box-shadow: 0 0 20px rgba(0,0,0,0.05);
      animation: zoomIn 0.6s ease;
    }

    @keyframes zoomIn {
      from { transform: scale(0.95); opacity: 0; }
      to { transform: scale(1); opacity: 1; }
    }

    h1 {
      text-align: center;
      margin-bottom: 2rem;
      color: #2e7d32;
      transition: color 0.3s ease;
    }

    h1:hover {
      color: #1b5e20;
    }

    h2 {
      margin-top: 2rem;
      font-size: 1.2rem;
      color: #444;
      transition: color 0.3s ease;
    }

    form {
      margin-bottom: 2rem;
      animation: slideUp 0.5s ease;
    }

    @keyframes slideUp {
      from { opacity: 0; transform: translateY(30px); }
      to { opacity: 1; transform: translateY(0); }
    }

    input, textarea, select, button {
      width: 100%;
      padding: 0.75rem;
      margin-top: 0.5rem;
      margin-bottom: 1rem;
      border: 1px solid #ccc;
      border-radius: 6px;
      font-size: 1rem;
      transition: all 0.3s ease;
    }

    input:focus, textarea:focus, select:focus {
      border-color: #2e7d32;
      box-shadow: 0 0 6px rgba(46, 125, 50, 0.2);
    }

    button {
      background-color: #2e7d32;
      color: white;
      font-weight: bold;
      border: none;
      transition: background 0.3s ease, transform 0.2s ease;
      cursor: pointer;
    }

    button:hover {
      background-color: #1b5e20;
      transform: scale(1.03);
    }

    .status {
      padding: 0.5rem 1rem;
      border-radius: 8px;
      background: #e0f7e9;
      color: #2e7d32;
      display: inline-block;
      font-weight: bold;
      margin-bottom: 1.5rem;
      animation: pulse 2s infinite;
    }

    @keyframes pulse {
      0%, 100% { transform: scale(1); opacity: 1; }
      50% { transform: scale(1.03); opacity: 0.8; }
    }

    .footer {
      text-align: center;
      font-size: 0.9rem;
      color: #888;
      margin-top: 2rem;
      opacity: 0.7;
      transition: opacity 0.3s ease;
    }

    .footer:hover {
      opacity: 1;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>üì≤ WhatsApp Bot Dashboard</h1>

    <div class="status">
      ‚úÖ Bot Status: <%= ready ? 'Connected' : 'Waiting for connection...' %>
    </div>

    <!-- Send to Individual -->
    <form method="POST" action="/send-message">
      <h2>üì§ Send Message to a Number</h2>
      <input type="text" name="number" placeholder="Phone number (e.g. 234xxxxxxxxxx)" required />
      <textarea name="message" placeholder="Your message here..." rows="4" required></textarea>
      <button type="submit">Send</button>
    </form>

    <!-- Send to Group -->
    <form method="POST" action="/send-group-message">
      <h2>üë• Send Message to a Group</h2>
      <select name="groupName" required>
        <% groups.forEach(g => { %>
          <option value="<%= g %>"><%= g %></option>
        <% }) %>
      </select>
      <textarea name="message" placeholder="Group message..." rows="4" required></textarea>
      <button type="submit">Send to Group</button>
    </form>

    <!-- Tag All in Group -->
    <form method="POST" action="/tag-group">
      <h2>üîñ Tag Everyone in a Group</h2>
      <select name="groupName" required>
        <% groups.forEach(g => { %>
          <option value="<%= g %>"><%= g %></option>
        <% }) %>
      </select>
      <textarea name="message" placeholder="Optional message to tag with..." rows="3"></textarea>
      <button type="submit">Tag All Members</button>
    </form>

    <div class="footer">Made with ‚ù§Ô∏è by Fortstudios for automation</div>
  </div>
</body>
</html>